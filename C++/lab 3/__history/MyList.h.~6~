//---------------------------------------------------------------------------

#ifndef MyListH
#define MyListH
//---------------------------------------------------------------------------
#endif
#include <vcl.h>
#include "MyException.h"

class List
{
public:
 List();
 ~List();

 int push_back(AnsiString, AnsiString,int,int);
 int GetSize();
 void pop_front();
 void clear();
 void removeAt(int);
 AnsiString GetName(int);
 AnsiString GetNumber(int);
 int GetHours(int);
 int GetRate(int);
 bool CheckString(AnsiString);
 bool CheckNumber(AnsiString);

 void Search(AnsiString, TMemo*);

private:
	class Node
	{
		public:
		Node *pNext;
		AnsiString name;
		AnsiString number;
		int hours;
		int rate;

		Node(AnsiString Name, AnsiString Number, int Hours, int Rate)
		{
			pNext = nullptr;
			name = Name;
			number = Number;
			hours = Hours;
			rate = Rate;
        }
	};

	Node *head;
    int size;
};

